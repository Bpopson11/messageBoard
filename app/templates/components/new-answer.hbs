{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="response">Answer</label>
          {{input value=response id="response"}}
        </div>

        <div class="form-group">
          <label for="name">Username</label>
          {{input value=name id="name"}}
        </div>

        <button {{action 'saveAnswer1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
